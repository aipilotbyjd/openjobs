 <div id="<%= dom_id job %>" class="card">
  <div class="card-body">
    <h5 class="card-title"><%= job.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= job.company %></h6>
    <p class="card-text"><%= truncate(job.description , length:150) %></p>
    
    <% if job.attachment.attached? %>
      <%= link_to 'Download Attachment', rails_blob_path(job.attachment, disposition: 'attachment') %>
    <% end %>
    
    <%= link_to "Apply Now", "/jobs/#{job.id}/apply" %>
  </div>
</div>
